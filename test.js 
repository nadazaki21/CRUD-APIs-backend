const courses = [
    { id: 1 , name : 'course1'},
    { id: 2 , name : 'course2'},
    { id: 3 , name : 'course3'},
];

app.get('/api/courses1', (req,res) => {
    res.send(courses);
});

app.post('/api/courses', (req,res) => {
    const new_course = {
        id: courses.length +1,
        name: req.body.name

    };
    courses.push(new_course);
    res.send(new_course);

});

